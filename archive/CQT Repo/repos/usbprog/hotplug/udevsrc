#set of udev rules to cope with a new device driver

SUBSYSTEM=="usb", ACTION=="add", ENV{PRODUCT}=="4b4/1239/*", RUN+="/sbin/insmod DRIVERPATH/usbprog.ko"

#SUBSYSTEM=="usb", ACTION=="remove", ENV{PRODUCT}=="4b4/1239/*", RUN+="/sbin/rmmod usbprog"

# create a symbolic link to the device in an ioboards directory with the correct
# owner set to the original device.

ACTION=="add", KERNEL=="*usbprog*", GROUP="users", SYMLINK+="ioboards/%k"

