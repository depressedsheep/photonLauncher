#!/bin/bash

if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
    SESSION_TYPE=remote/ssh
else
    case $(ps -o comm= -p $PPID) in
        sshd|*/sshd) SESSION_TYPE=remote/ssh;;
    esac
fi

function pk
{
    echo "Quotes to inspire:\n"
    wget -q "https://raw.githubusercontent.com/sunjerry019/photonLauncher/master/linux/quotes.txt" -O quotes.txt
    shuf -n 1 quotes.txt
    echo "Run `shuf -n 1 quotes.txt` for more\n"
}

if [ $SESSION_TYPE == "remote/ssh" ]; then
    echo "\n"
    pk
fi
